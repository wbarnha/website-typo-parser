                       </mml:mrow>
                     </mml:mpadded>
                     <mml:mo stretchy="true">&UnderBrace;</mml:mo>
                   </mml:munder>
                 </mml:mtd>
               </mml:mtr>
               <mml:mtr>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mtext mathcolor="black">(</mml:mtext>
                   <mml:mstyle fontstyle="italic">
                     <mml:mtext mathcolor="black">Response&ensp;to&ensp;Initial&ensp;Data</mml:mtext>
                   </mml:mstyle>
                   <mml:mtext mathcolor="black">)</mml:mtext>
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="0.400000in" />
                   <mml:mtext mathcolor="black">(</mml:mtext>
                   <mml:mstyle fontstyle="italic">
                     <mml:mtext mathcolor="black">Response&ensp;to&ensp;Input</mml:mtext>
                   </mml:mstyle>
                   <mml:mtext mathcolor="black">)</mml:mtext>
                 </mml:mtd>
               </mml:mtr>
               <mml:mtr>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
               </mml:mtr>
               <mml:mtr>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mstyle mathsize="2.40ex">
                     <mml:mtext mathcolor="black">zero-input response</mml:mtext>
                   </mml:mstyle>
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="veryverythinmathspace" />
                 </mml:mtd>
                 <mml:mtd>
                   <mml:mspace width="0.450000in" />
                   <mml:mstyle mathsize="2.40ex">
                     <mml:mtext mathcolor="black">zero-state response</mml:mtext>
