             <mml:mtd>
               <mml:mrow>
                 <mml:mn>1</mml:mn>
               </mml:mrow>
               <mml:mtext mathcolor="black">&ensp;if&ensp;</mml:mtext>
               <mml:mrow>
                 <mml:mi>t</mml:mi>
                 <mml:mo form="infix">></mml:mo>
                 <mml:msub>
                   <mml:mi>t</mml:mi>
                   <mml:mn>0</mml:mn>
                 </mml:msub>
